<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:text="@string/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dayText"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <TextView
        android:text="@string/max_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maxTempText"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp"
        android:layout_below="@+id/dayText"
        android:layout_alignRight="@+id/dayText"
        android:layout_alignEnd="@+id/dayText"
        android:layout_marginTop="18dp" />

    <TextView
        android:text="@string/min_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minTempText"
        android:layout_below="@+id/maxTempText"
        android:layout_alignRight="@+id/maxTempText"
        android:layout_alignEnd="@+id/maxTempText" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/tempImage"
        android:layout_marginRight="82dp"
        android:layout_marginEnd="82dp"
        android:layout_alignTop="@+id/dayText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>